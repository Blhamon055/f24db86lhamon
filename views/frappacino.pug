extends layout

block content
  h1= title
  p My name is Braeden
  - let resultsFrapp = results;
  
  .container-fluid
    .row
      each item, index in resultsFrapp
        .col-sm-2
          h4 #{item.orderNum}
          p Brand: #{item.brand}
          p Size: #{item.size}
          div(class="item" onclick=`buy(${index})`)
          button(onclick=`buy(${index})`) Buy Item #{item.orderNum}

  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
